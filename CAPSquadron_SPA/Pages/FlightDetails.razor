@page "/flights/{id:int}"
@using CAPSquadron_SPA.Services
@inject IFlightService FlightService
@inject NavigationManager Navigation
@code {
    [Parameter]
    public int Id { get; set; }

    private FlightDto? flight;

    protected override async Task OnInitializedAsync()
    {
        flight = await FlightService.GetFlightByIdAsync(Id);
    }
}

<h3>Flight Details</h3>

@if (flight == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <p>Name: @flight.Name</p>
        <p>Flight Commander: @flight.FlightCommanderId</p>
        <p>Flight Sergeants: @string.Join(", ", flight.FlightSergeantIds)</p>
        <p>Members: @string.Join(", ", flight.MemberIds)</p>
    </div>
}
